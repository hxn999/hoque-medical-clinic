            <form class="flex flex-col items-center justify-center gap-8 " method="post" action="/admin/login">
                <input
                    class="bg-primary text-black p-2 px-4 text-lg  rounded-md border-secondary focus::border-2 border"
                    type="text" placeholder="Enter Username" name="username">
                <div class="flex relative">

                    <input id="pass"
                        class="bg-primary text-black p-2 px-4 text-lg rounded-md border-secondary focus::border-2 border"
