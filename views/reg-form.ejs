<%-include('./components/header.ejs') %>
    <section class="patient-reg">
        <h1 onclick="" class="reg-title mission-title">NEW PATIENT REGISTRATION</h1>
        <p class="reg-desc mission-desc ">If you are looking to become a new patient, or have had a procedure
            recommended by your primary care physician, please fill out the following form, and we will be in contact
            shortly. To fill out this form, you must be on a desktop computer.</p>

            <div id="toast" class="toast">
                This is a toast notification!
            </div>
            <form action="/book" method="post" class="reg-form">
                <!-- First Name -->
                <label class="label">
                    First Name <span class="red">*</span>
                    <input type="text" name="first_name" class="contact-input-text" placeholder="First Name" required />
                </label>
            
                <!-- Last Name -->
                <label class="label">
                    Last Name <span class="red">*</span>
                    <input type="text" name="last_name" class="contact-input-text" placeholder="Last Name" required />
                </label>
            
                <!-- Email Address -->
                <label class="label">
                    Email Address <span class="red">*</span>
                    <input type="email" name="email" class="contact-input-text" placeholder="Add a valid email address" required />
                </label>
            
                <!-- Date of Birth -->
                <label class="label">
                    Date of Birth <span class="red">*</span>
                    <input type="date" name="date_of_birth" class="contact-input-text" placeholder="MM/DD/YYYY" required />
                </label>
            
                <!-- Phone -->
                <label class="label">
                    Phone <span class="red">*</span>
                    <input type="text" name="phone" class="contact-input-text" placeholder="Add phone number" required />
                </label>
            
                <!-- Address -->
                <label class="label">
                    Address <span class="red">*</span>
                    <input type="text" name="address" class="contact-input-text" placeholder="Add your address" required />
                </label>
            
                <!-- Primary Care M.D. -->
                <label class="label">
                    Primary Care M.D.
                    <input type="text" name="primary_care_md" class="contact-input-text" placeholder="Add primary care M.D." />
                </label>
            
                <!-- Biological Sex -->
                <div class="radio-group">
                    <h3 class="radio-title">Biological Sex <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="biological_sex" value="male" required /> Male
                        </label>
                        <label>
                            <input type="radio" name="biological_sex" value="female" required /> Female
                        </label>
                    </div>
                </div>
            
                <!-- Marital Status -->
                <div class="radio-group">
                    <h3 class="radio-title">Marital Status <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="marital_status" value="single" required /> Single
                        </label>
                        <label>
                            <input type="radio" name="marital_status" value="married" required /> Married
                        </label>
                        <label>
                            <input type="radio" name="marital_status" value="widowed" required /> Widowed
                        </label>
                    </div>
                </div>
            
                <!-- Employer -->
                <label class="label">
                    Employer <span class="red">*</span>
                    <input type="text" name="employer" class="contact-input-text" placeholder="Add your employer name" required />
                </label>
            
                <!-- Student -->
                <div class="radio-group">
                    <h3 class="radio-title">Student? <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="student" value="yes" required /> Yes
                        </label>
                        <label>
                            <input type="radio" name="student" value="no" required /> No
                        </label>
                    </div>
                </div>
            
                <!-- Emergency Contact -->
                <label class="label">
                    Emergency Contact <span class="red">*</span>
                    <input type="text" name="emergency_contact" class="contact-input-text" placeholder="Add emergency contact name" required />
                </label>
            
                <!-- Emergency Contact Phone -->
                <label class="label">
                    Emergency Contact Phone <span class="red">*</span>
                    <input type="text" name="emergency_contact_phone" class="contact-input-text" placeholder="Add phone number" required />
                </label>
            
                <!-- Employment Status -->
                <div class="radio-group">
                    <h3 class="radio-title">Employment Status <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="employment_status" value="employed" required /> Employed
                        </label>
                        <label>
                            <input type="radio" name="employment_status" value="unemployed" required /> Unemployed
                        </label>
                    </div>
                </div>
            
                <!-- Responsible Party -->
                <label class="label">
                    Responsible Party <span class="red">*</span>
                    <input type="text" name="responsible_party" class="contact-input-text" placeholder="Add responsible party name" required />
                </label>
            
                <!-- Responsible Party Phone -->
                <label class="label">
                    Responsible Party Phone <span class="red">*</span>
                    <input type="text" name="responsible_party_phone" class="contact-input-text" placeholder="Add phone number" required />
                </label>
            
                <!-- Responsible Party Address -->
                <label class="label">
                    Responsible Party Address <span class="red">*</span>
                    <input type="text" name="responsible_party_address" class="contact-input-text" placeholder="Add responsible party address" required />
                </label>
            
                <!-- Responsible Party Relationship -->
                <div class="radio-group">
                    <h3 class="radio-title">Responsible Party Relationship <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="responsible_party_relationship" value="self" required /> Self
                        </label>
                        <label>
                            <input type="radio" name="responsible_party_relationship" value="spouse" required /> Spouse
                        </label>
                        <label>
                            <input type="radio" name="responsible_party_relationship" value="parent" required /> Parent
                        </label>
                        <label>
                            <input type="radio" name="responsible_party_relationship" value="other" required /> Other
                        </label>
                    </div>
                </div>
            
                <!-- Primary Insurance Details -->
                <label class="label">
                    Primary Insurance Carrier <span class="red">*</span>
                    <input type="text" name="primary_insurance_carrier" class="contact-input-text" placeholder="Add insurance carrier" required />
                </label>
                <label class="label">
                    Primary Insurance ID Number <span class="red">*</span>
                    <input type="text" name="primary_insurance_id" class="contact-input-text" placeholder="Add ID number" required />
                </label>
                <label class="label">
                    Primary Insurance Group Number
                    <input type="text" name="primary_insurance_group" class="contact-input-text" placeholder="Add group number" />
                </label>
                <label class="label">
                    Primary Insurance Carrier Address <span class="red">*</span>
                    <input type="text" name="primary_insurance_address" class="contact-input-text" placeholder="Add insurance carrier address" required />
                </label>
                <label class="label">
                    Primary Insurance Subscriber <span class="red">*</span>
                    <input type="text" name="primary_insurance_subscriber" class="contact-input-text" placeholder="Add primary subscriber" required />
                </label>
                <label class="label">
                    Primary Subscriber Date of Birth <span class="red">*</span>
                    <input type="date" name="primary_subscriber_dob" class="contact-input-text" placeholder="MM/DD/YYYY" required />
                </label>
                <div class="radio-group">
                    <h3 class="radio-title">Primary Subscriber Relationship <span class="red">*</span></h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="primary_relationship" value="self" required /> Self
                        </label>
                        <label>
                            <input type="radio" name="primary_relationship" value="spouse" required /> Spouse
                        </label>
                        <label>
                            <input type="radio" name="primary_relationship" value="parent" required /> Parent
                        </label>
                        <label>
                            <input type="radio" name="primary_relationship" value="other" required /> Other
                        </label>
                    </div>
                </div>
            
                <!-- Secondary Insurance Details -->
                <label class="label">
                    Secondary Insurance Carrier
                    <input type="text" name="secondary_insurance_carrier" class="contact-input-text" placeholder="Add insurance carrier" />
                </label>
                <label class="label">
                    Secondary Insurance ID Number
                    <input type="text" name="secondary_insurance_id" class="contact-input-text" placeholder="Add ID number" />
                </label>
                <label class="label">
                    Secondary Insurance Group Number
                    <input type="text" name="secondary_insurance_group" class="contact-input-text" placeholder="Add group number" />
                </label>
                <label class="label">
                    Secondary Insurance Carrier Address
                    <input type="text" name="secondary_insurance_address" class="contact-input-text" placeholder="Add insurance carrier address" />
                </label>
                <label class="label">
                    Secondary Insurance Subscriber
                    <input type="text" name="secondary_insurance_subscriber" class="contact-input-text" placeholder="Add secondary subscriber" />
                </label>
                <label class="label">
                    Secondary Subscriber Date of Birth
                    <input type="date" name="secondary_subscriber_dob" class="contact-input-text" placeholder="MM/DD/YYYY" />
                </label>
                <div class="radio-group">
                    <h3 class="radio-title">Secondary Subscriber Relationship</h3>
                    <div class="radio">
                        <label>
                            <input type="radio" name="secondary_relationship" value="self" /> Self
                        </label>
                        <label>
                            <input type="radio" name="secondary_relationship" value="spouse" /> Spouse
                        </label>
                        <label>
                            <input type="radio" name="secondary_relationship" value="parent" /> Parent
                        </label>
                        <label>
                            <input type="radio" name="secondary_relationship" value="other" /> Other
                        </label>
                    </div>
                </div>
            
                <!-- Submit Button -->
                <button id="reg-btn" type="submit" class="reg-btn">Submit</button>
            </form>
            
    </section>
    <script src="./script/script.js"></script>

    <script>
        
    </script>


</body>

</html>